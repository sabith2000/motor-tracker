# Google Sheet ID (from the URL: https://docs.google.com/spreadsheets/d/[SHEET_ID]/edit)
GOOGLE_SHEET_ID=your_sheet_id_here

# MongoDB Connection URI
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/motor-tracker

# Google Service Account Credentials (JSON string)
# In production (Vercel): paste the full JSON as a single-line string
# For local dev: set this env var or use vercel env pull
GOOGLE_CREDENTIALS={"type":"service_account","project_id":"...","private_key":"...","client_email":"..."}

# Vercel Cron Secret (auto-set by Vercel, only needed for local testing)
CRON_SECRET=your_cron_secret_here
